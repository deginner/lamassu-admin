
.card

  .inner

    .top
      .main_title Trading


    .mid.scroller
      .description
        .description_title Set your trade settings. 
        .description_body Set or change your current settings. 
        .toggle
          .active Active
          .inactive Inactive
      .settings
        ul
          li
            .label Provider
            .select_wrap
              select#exchange_provider
                option(value="coinapult") Coinapult
                option(value="poloniex") Poloniex
          li
            .label ID
            .input_wrap
              input#exchange_id
          li
            .label API Key
            .input_wrap
              input#exchange_api_key
          li
            .label Secret
            .input_wrap
              input(type="password")#exchange_secret

    .bot

